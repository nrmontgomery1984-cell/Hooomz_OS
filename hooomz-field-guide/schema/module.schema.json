{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HooomzFieldGuideModule",
  "type": "object",
  "required": ["id", "title", "phase", "category", "level", "priority", "sections"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Module ID e.g. 'FF-01'"
    },
    "phase": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Phase number 1-5"
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly slug e.g. 'foundation-systems'"
    },
    "title": {
      "type": "string",
      "description": "Display title e.g. 'Foundation Systems'"
    },
    "category": {
      "type": "string",
      "description": "Category e.g. 'Structural Foundation'"
    },
    "level": {
      "type": "string",
      "enum": ["Apprentice", "Journeyman", "Certified Professional"],
      "description": "Skill level required"
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Priority level: 5 = critical, 1 = low"
    },
    "climate_zone": {
      "type": "string",
      "description": "Climate zone e.g. 'NB Zone 6 (Moncton)'"
    },
    "prerequisites": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Array of prerequisite module IDs e.g. ['OH-01', 'FF-03']"
    },
    "estimated_study_hours": {
      "type": "number",
      "description": "Estimated hours to complete"
    },
    "status": {
      "type": "string",
      "enum": ["complete", "draft", "todo"],
      "description": "Content status"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Searchable tags"
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "content_md"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Section ID e.g. 'intro', 'fundamentals'"
          },
          "title": {
            "type": "string",
            "description": "Section title e.g. 'SECTION 1: INTRODUCTION'"
          },
          "summary": {
            "type": "string",
            "description": "1-3 sentence TL;DR for AI/search"
          },
          "content_md": {
            "type": "string",
            "description": "Full markdown content"
          }
        }
      }
    },
    "checklists": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "items"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "quiz": {
      "type": "object",
      "properties": {
        "passing_score": {
          "type": "number",
          "description": "Passing threshold e.g. 0.8 = 80%"
        },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "question", "type"],
            "properties": {
              "id": { "type": "string" },
              "question": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["mcq", "short", "boolean"]
              },
              "choices": {
                "type": "array",
                "items": { "type": "string" }
              },
              "answer": { "type": "string" },
              "explanation": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
